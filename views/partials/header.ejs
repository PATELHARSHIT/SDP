                                <% } else if (login) { %>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/profile">PROFILE</a></li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/logout">LOGOUT</a></li>
                                    <% } else { %>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/login">LOGIN</a></li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/register">REGISTER</a></li>
                                        <% } %>
                    </ul>
                </div>
            </div>
        </nav>
