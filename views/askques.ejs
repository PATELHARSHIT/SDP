<%- include("partials/header") -%>

<main role="main">
    <div class="col-md-6 container">
    <h4>Post Question</h4><hr>

    <form>
      <div class="form-group">
        <label for="question">Your Question</label>
        <input type="text" class="form-control" id="question" placeholder="e.g. How to write 'Hello World' in Java?">
      </div>
      <div class="form-row">
        <div class="form-group col-md-7">
          <label for="tags">Tags</label>
          <input type="text" class="form-control" id="tags" placeholder="#Java">
        </div>
        <div class="form-group col-md-5">
          <label for="inputState">State</label>
          <select id="inputState" class="form-control">
            <option selected>Category</option>
            <option>Finance</option>
            <option>Business Strategy</option>
            <option>Technology</option>
          </select>
        </div>

      </div>

      <button type="submit" class="btn btn-primary mybtn">Post</button>
    </form>
    </div>
</main>

<%- include("partials/footer") -%>
