<%- include("partials/header") -%>
<main role="main">
  <div class="col-md-6 container">
    <h4>Post Question</h4>
    <hr>
    <form action="/askquestion" method="POST">
      <div class="form-group">
        <label for="question">Your Question</label>
        <input required name="question" type="text" class="autocomplete form-control" id="question"
          placeholder="e.g. How to write 'Hello World' in Java?">
      </div>
      <div class="form-row">
        <div class="form-group col-md-7">
          <label for="tags">Tags (Use comma for more than one tags.)</label>
          <input required name="tags" type="text" class="form-control" id="tags" placeholder="e.g. Java, Hello World">
        </div>
        <div class="form-group col-md-5">
          <label for="inputState">Category (select appropriate one)</label>
          <select required name="categoryid" id="inputState" class="form-control">
            <option>Category</option>
            <% categories.forEach(category => { %>
            <option value="<%= category._id %>"><%= category.categoryName %></option>
            <% }) %>
          </select>
        </div>
      </div>
      <button type="submit" class="mr-2 btn bg-blue text-white mybtn">Post</button>
      <a href="/" class="text-white btn bg-red mybtn">Cancel</a>
    </form>
  </div>
</main>

<%- include("partials/footer") -%>
